@model IEnumerable<MovieRentSite.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-image: url("../Images/154.jpg");
            background-size: cover;
            background-attachment: fixed;
        }

        table {
            font-family: "Avantgarde", sans-serif;
            border-collapse: collapse;
            width: 50%;
            margin: 0px auto;
        }

        th {
            font-size: 20px;
            background-color: #f44336;
            color: #555555;
            cursor: default;
        }

        tr {
            color: white;
        }

        th, td {
            font-family: "Avantgarde", sans-serif;
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            font-family: "Avantgarde", sans-serif;
            background-color: #f5f5f5;
            color: #555555;
            cursor: pointer;
        }

        h1 {
            font-family: "Avantgarde", sans-serif;
            font-size: 40px;
            color: white;
        }

        #succmessage {
            font-size: 20px;
            font-family: "Avantgarde", sans-serif;
            color: green;
            position: relative;
            bottom: 30%;
            height: 60px;
            background: rgba(255, 255, 255, 0.64);
            border-radius: 4px;
        }


        #buttonadd {
            background-color: #e5e5e5;
            color: #f44336;
            border: 2px solid #f44336;
        }

            #buttonadd :hover {
                background-color: #f44336;
                color: white;
            }
    </style>
</head>   
<h1>All Movies List</h1>
     
@if (User.IsInRole("Admin"))
{

    <p>
        @Html.ActionLink("Add New Movie", "Create")
    </p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>

        @if (User.IsInRole("Admin"))
        {
            <th>Edit </th>
            <th>Details</th>
            <th>Delete</th>

        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        @if (User.IsInRole("Admin"))
        {
            <td>
                <i class="glyphicon glyphicon-edit">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </i>
            </td>


                        <td>
<i class="glyphicon glyphicon-">@Html.ActionLink("Details", "Details", new { id = item.Id }) </i>
                    </td>
                        <td>

                <i class="glyphicon glyphicon-list-alt">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</i> 
            </td>
        }

    </tr>
}



</table>


@if (User.IsInRole("Admin"))
{
    <a class="button" id="buttonadd" href="/Movies/Create">Add a new movie</a>
}

