@model IEnumerable<MovieRentSite.Models.Movie>

@{
    ViewBag.Title = "MyMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <style>
        body {
            background-image: url("../Images/154.jpg");
            background-size: cover;
            background-attachment: fixed;
        }

        table {
            font-family: "Avantgarde", sans-serif;
            border-collapse: collapse;
            width: 50%;
            margin: 0px auto;
        }

        th {
            font-size: 20px;
            background-color: #fde243;
            color: #555555;
            cursor: default;
        }

        tr {
            color: white;
        }

        th, td {
            font-family: "Avantgarde", sans-serif;
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            font-family: "Avantgarde", sans-serif;
            background-color: #f5f5f5;
            color: #555555;
            cursor: pointer;
        }


        h1 {
            font-family: "Avantgarde", sans-serif;
            font-size: 40px;
            color: white;
        }

        #temperror{
            color: red;
        }
        #Nothing{
            color:white;
        }

    </style>


</head>

@if (Model.Count()==0)
{
    <div id="Nothing" class="alert-warning">
        <h1 >Nothing To Show</h1>
    </div>
}
else
{
    <h1>MyMovies</h1>

    <p>
        @Html.ActionLink("Rent More", "RentPage")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <button>@Html.ActionLink("Return Movie", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
        }

    </table>



}


<div id="temperror">@TempData["Error"]</div>
